#!/usr/bin/env bash

if [ $1 = '' ]; then
    echo "You must specify either --dap or --oss"
elif [ $1 = '--oss' ]; then
    mkdir -p out/conjur
elif [ $1 = '--dap' ]; then
    mkdir -p out/dap
fi

export VERSION=$1

docker run --rm \
    -v ${PWD}:/code \
    -w /code \
    --env VERSION \
    python:3.9 \
    /bin/bash -c "
        pip install pyyaml

        # We dont bundle here because generating a client from a bundle
        # because you lose a lot of object name information. Instead
        # transform each file individually
        for name in ./spec/*
        do
            echo \$name \$VERSION
            ./bin/transform.py \$name \$VERSION
        done
    "
